function Tlogs.ReadFromFile(TargetPath:string):string;
var
  fs: TFileStream;
  teststr: string;
  a: char;
  i: integer;
begin
  if not FileExists(TargetPath) then exit;
  html:=COMMANDLINE_PARAMETERS('html');

  teststr := '';
  if html then teststr:='<table style="width:100%">';
  if not FileExists(TargetPath) then exit;
  fs := TFileStream.Create(TargetPath, fmOpenRead);
  try
    fs.Position := 0;
    for i := 1 to fs.size do begin
      fs.Read(a, sizeof(char));
      if html then  teststr := teststr + '<tr><td>'+a+'</td></tr>' else teststr := teststr + a;
    end;
  finally
    fs.free;
  end;
  if html then teststr:=teststr + '</table>';
  result:=teststr;
end;
